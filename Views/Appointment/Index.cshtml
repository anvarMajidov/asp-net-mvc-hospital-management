@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor _http

<div class="row">
    <div class="container">
        @if (TempData.ContainsKey("newAdminSignUp"))
        {
            <div class=container>
                <div class="alert alert-success alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                    <strong>Account created for @TempData["newAdminSignUp"].ToString() </strong>
                </div>
            </div>
        }
        @if (User.IsInRole(HospitalService.Helper.Helper.Admin))
        {
            <div class="row">
                <div class="form-group  col-4" id="divDoctorList">
                    <label> Select Doctor</label>                
                    <select asp-items="@ViewBag.DropDown" class="form-control select2" id="doctorId" onchange="onDoctorChange()"></select>
                </div>
            <div class="col-3 offset-5">
                <a asp-controller="Account" asp-action="Register" class="btn-secondary form-control">Admin Registration</a>
            </div>
        </div>
        }
        <div id="calendar"></div>
    </div>
</div>
<partial name="_AddEditAppointment"/>

<div class="text-right pt-2">
    <p>@_http.HttpContext.Session.GetString("ssuserName")'s account is logged in</p>
</div>
